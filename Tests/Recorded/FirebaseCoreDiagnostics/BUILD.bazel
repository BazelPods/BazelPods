load('@build_bazel_rules_ios//rules:framework.bzl', 'apple_framework')
# Add a config setting release for compilation mode
# Assume that people are using `opt` for release mode
# see the bazel user manual for more information
# https://docs.bazel.build/versions/master/be/general.html#config_setting
config_setting(
  name = "release",
  values = {
    "compilation_mode": "opt"
  }
)
apple_framework(
  name = "FirebaseCoreDiagnostics",
  module_name = "FirebaseCoreDiagnostics",
  bundle_id = "org.cocoapods.FirebaseCoreDiagnostics",
  link_dynamic = True,
  testonly = False,
  infoplists = [
    ":FirebaseCoreDiagnostics_InfoPlist"
  ],
  platforms = {
    "ios": "10.0"
  },
  srcs = glob(
    [
      "Firebase/CoreDiagnostics/FIRCDLibrary/**/*.c",
      "Firebase/CoreDiagnostics/FIRCDLibrary/**/*.h",
      "Firebase/CoreDiagnostics/FIRCDLibrary/**/*.m",
      "Interop/CoreDiagnostics/Public/*.h"
    ]
  ),
  public_headers = glob(
    [
      "Firebase/CoreDiagnostics/FIRCDLibrary/Public/*.h"
    ]
  ),
  deps = [
    "//Tests/Pods/GoogleDataTransport:GoogleDataTransport",
    "//Tests/Pods/GoogleUtilities:GoogleUtilities",
    "//Tests/Pods/nanopb:nanopb"
  ],
  objc_defines = [
    "COCOAPODS=1"
  ] + select(
    {
      "//conditions:default": [
        "POD_CONFIGURATION_DEBUG=1",
        "DEBUG=1"
      ],
      ":release": [
        "POD_CONFIGURATION_RELEASE=1"
      ]
    }
  ),
  swift_defines = [
    "COCOAPODS"
  ] + select(
    {
      "//conditions:default": [
        "DEBUG"
      ]
    }
  ),
  sdk_frameworks = [
    "Foundation"
  ],
  objc_copts = [
    "-ITests/Pods/FirebaseCoreDiagnostics"
  ],
  swift_copts = [
    "-Xcc",
    "-ITests/Pods/FirebaseCoreDiagnostics"
  ],
  xcconfig = {
    "CLANG_UNDEFINED_BEHAVIOR_SANITIZER_NULLABILITY": "YES",
    "GCC_PREPROCESSOR_DEFINITIONS": [
      "PB_FIELD_32BIT=1",
      "PB_NO_PACKED_STRUCTS=1",
      "PB_ENABLE_MALLOC=1"
    ],
    "GCC_TREAT_WARNINGS_AS_ERRORS": "YES"
  },
  visibility = [
    "//visibility:public"
  ]
)
genrule(
  name = "FirebaseCoreDiagnostics_InfoPlist",
  srcs = [],
  outs = [
    "FirebaseCoreDiagnostics_InfoPlist.plist"
  ],
  cmd = """cat <<EOF > $@
<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
	<key>CFBundleIdentifier</key>
	<string>org.cocoapods.FirebaseCoreDiagnostics</string>
	<key>CFBundleInfoDictionaryVersion</key>
	<string>6.0</string>
	<key>CFBundleName</key>
	<string>FirebaseCoreDiagnostics</string>
	<key>CFBundlePackageType</key>
	<string>FMWK</string>
	<key>CFBundleShortVersionString</key>
	<string>9.6.0</string>
	<key>CFBundleSignature</key>
	<string>????</string>
	<key>CFBundleSupportedPlatforms</key>
	<array>
		<string>iPhoneSimulator</string>
		<string>iPhoneOS</string>
	</array>
	<key>CFBundleVersion</key>
	<string>1</string>
	<key>MinimumOSVersion</key>
	<string>10.0</string>
	<key>UIDeviceFamily</key>
	<array>
		<integer>1</integer>
		<integer>2</integer>
	</array>
</dict>
</plist>

EOF"""
)