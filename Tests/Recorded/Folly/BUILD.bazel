load('@build_bazel_rules_ios//rules:framework.bzl', 'apple_framework')
# Add a config setting release for compilation mode
# Assume that people are using `opt` for release mode
# see the bazel user manual for more information
# https://docs.bazel.build/versions/master/be/general.html#config_setting
config_setting(
  name = "release",
  values = {
    "compilation_mode": "opt"
  }
)
apple_framework(
  name = "Folly",
  module_name = "folly",
  bundle_id = "org.cocoapods.Folly",
  link_dynamic = True,
  testonly = False,
  infoplists = [
    ":Folly_InfoPlist"
  ],
  platforms = {
    "ios": "10.0"
  },
  srcs = glob(
    [
      "folly/Bits.cpp",
      "folly/Conv.cpp",
      "folly/Demangle.cpp",
      "folly/StringBase.cpp",
      "folly/Unicode.cpp",
      "folly/detail/MallocImpl.cpp",
      "folly/dynamic.cpp",
      "folly/json.cpp",
      "folly/portability/BitsFunctexcept.cpp"
    ]
  ),
  deps = [
    "//Tests/Pods/DoubleConversion:DoubleConversion",
    "//Tests/Pods/boost-for-react-native:boost-for-react-native",
    "//Tests/Pods/glog:glog"
  ],
  objc_defines = [
    "COCOAPODS=1"
  ] + select(
    {
      "//conditions:default": [
        "POD_CONFIGURATION_DEBUG=1",
        "DEBUG=1"
      ],
      ":release": [
        "POD_CONFIGURATION_RELEASE=1"
      ]
    }
  ),
  swift_defines = [
    "COCOAPODS"
  ] + select(
    {
      "//conditions:default": [
        "DEBUG"
      ]
    }
  ),
  sdk_dylibs = [
    "stdc++"
  ],
  objc_copts = [
    "-ITests/Pods/Folly",
    "-ITests/Pods/boost-for-react-native",
    "-ITests/Pods/DoubleConversion"
  ],
  swift_copts = [
    "-Xcc",
    "-ITests/Pods/Folly",
    "-Xcc",
    "-ITests/Pods/boost-for-react-native",
    "-Xcc",
    "-ITests/Pods/DoubleConversion"
  ],
  xcconfig = {
    "CLANG_CXX_LANGUAGE_STANDARD": "c++14",
    "USE_HEADERMAP": "NO"
  },
  visibility = [
    "//visibility:public"
  ]
)
genrule(
  name = "Folly_InfoPlist",
  srcs = [],
  outs = [
    "Folly_InfoPlist.plist"
  ],
  cmd = """cat <<EOF > $@
<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
	<key>CFBundleIdentifier</key>
	<string>org.cocoapods.Folly</string>
	<key>CFBundleInfoDictionaryVersion</key>
	<string>6.0</string>
	<key>CFBundleName</key>
	<string>Folly</string>
	<key>CFBundlePackageType</key>
	<string>FMWK</string>
	<key>CFBundleShortVersionString</key>
	<string>2016.09.26.00</string>
	<key>CFBundleSignature</key>
	<string>????</string>
	<key>CFBundleSupportedPlatforms</key>
	<array>
		<string>iPhoneSimulator</string>
		<string>iPhoneOS</string>
	</array>
	<key>CFBundleVersion</key>
	<string>1</string>
	<key>MinimumOSVersion</key>
	<string>10.0</string>
	<key>UIDeviceFamily</key>
	<array>
		<integer>1</integer>
		<integer>2</integer>
	</array>
</dict>
</plist>

EOF"""
)