load('@build_bazel_rules_ios//rules:apple_patched.bzl', 'apple_static_framework_import')
load('@build_bazel_rules_ios//rules:framework.bzl', 'apple_framework')
# Add a config setting release for compilation mode
# Assume that people are using `opt` for release mode
# see the bazel user manual for more information
# https://docs.bazel.build/versions/master/be/general.html#config_setting
config_setting(
  name = "release",
  values = {
    "compilation_mode": "opt"
  }
)
config_setting(
  name = "ios_arm64",
  values = {
    "cpu": "ios_arm64"
  }
)
config_setting(
  name = "ios_armv7",
  values = {
    "cpu": "ios_armv7"
  }
)
config_setting(
  name = "ios_i386",
  values = {
    "cpu": "ios_i386"
  }
)
config_setting(
  name = "ios_x86_64",
  values = {
    "cpu": "ios_x86_64"
  }
)
apple_framework(
  name = "UMPush",
  module_name = "UMPush",
  bundle_id = "org.cocoapods.UMPush",
  link_dynamic = False,
  testonly = False,
  platforms = {
    "ios": "10.0"
  },
  data = [
    "UMPush/UMPushResource.bundle"
  ],
  deps = [
    "//Tests/Pods/UMCommon:UMCommon"
  ] + select(
    {
      "//conditions:default": [],
      ":ios_arm64": [
        ":UMPush_UMPush_VendoredFramework"
      ],
      ":ios_armv7": [
        ":UMPush_UMPush_VendoredFramework"
      ],
      ":ios_i386": [
        ":UMPush_UMPush_VendoredFramework"
      ],
      ":ios_x86_64": [
        ":UMPush_UMPush_VendoredFramework"
      ]
    }
  ),
  objc_defines = [
    "COCOAPODS=1"
  ] + select(
    {
      "//conditions:default": [
        "POD_CONFIGURATION_DEBUG=1",
        "DEBUG=1"
      ],
      ":release": [
        "POD_CONFIGURATION_RELEASE=1"
      ]
    }
  ),
  swift_defines = [
    "COCOAPODS"
  ] + select(
    {
      "//conditions:default": [
        "DEBUG"
      ]
    }
  ),
  sdk_frameworks = [
    "UserNotifications"
  ],
  visibility = [
    "//visibility:public"
  ]
)
apple_static_framework_import(
  name = "UMPush_UMPush_VendoredFramework",
  framework_imports = glob(
    [
      "UMPush/UMPush.framework/**"
    ]
  ),
  visibility = [
    "//visibility:public"
  ]
)